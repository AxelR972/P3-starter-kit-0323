{% extends 'base.html.twig' %}

{% block title %}Players index{% endblock %}

{% block body %}
    <h1>Players index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Firstname</th>
                <th>Lastname</th>
                <th>Country</th>
                <th>Picture</th>
                <th>Position</th>
                <th>Number</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for player in players %}
            <tr>
                <td>{{ player.id }}</td>
                <td>{{ player.firstname }}</td>
                <td>{{ player.lastname }}</td>
                <td>{{ player.country }}</td>
                <td>{{ player.picture }}</td>
                <td>{{ player.position }}</td>
                <td>{{ player.number }}</td>
                <td>
                    <a href="{{ path('app_players_show', {'id': player.id}) }}">show</a>
                    <a href="{{ path('app_players_edit', {'id': player.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_players_new') }}">Create new</a>
{% endblock %}
