{% extends 'base.html.twig' %}

{% block title %}Players{% endblock %}

{% block body %}
    <h1>Players</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ player.id }}</td>
            </tr>
            <tr>
                <th>Firstname</th>
                <td>{{ player.firstname }}</td>
            </tr>
            <tr>
                <th>Lastname</th>
                <td>{{ player.lastname }}</td>
            </tr>
            <tr>
                <th>Country</th>
                <td>{{ player.country }}</td>
            </tr>
            <tr>
                <th>Picture</th>
                <td>{{ player.picture }}</td>
            </tr>
            <tr>
                <th>Position</th>
                <td>{{ player.position }}</td>
            </tr>
            <tr>
                <th>Number</th>
                <td>{{ player.number }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_players_index') }}">back to list</a>

    <a href="{{ path('app_players_edit', {'id': player.id}) }}">edit</a>

    {{ include('players/_delete_form.html.twig') }}
{% endblock %}
