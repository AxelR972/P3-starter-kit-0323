{% extends 'base.html.twig' %}

{% block title %}Player
{% endblock %}

{% block body %}
	<div class="d-flex justify-content-center align-items-center vh-100">
		<div class="card border-info mb-3">
			<div class="row g-0">
				<div class="col-md-4">
					<img src="{{ asset('images/' ~ player.imageName) }}" class="img-fluid rounded-start" alt="{{ player.lastname }}">
				</div>
				<div class="col-md-8">
					<div class="card-body">
						<h5 class="card-title"><strong>{{ player.firstname }}
							{{ player.lastname }}</strong></h5>
						<p class="card-text">
							<strong>Country:</strong>
							{{ player.country }}<br>
							<strong>Position:</strong>
							{{ player.position }}<br>
							<strong>Team:</strong>
							{{ player.team.name }}<br>
							<strong>Number:</strong>
							{{ player.number }}
						</p>
					</div>
				</div>
			</div>
			<div class="card-footer d-flex justify-content-between">
				<a href="{{ path('player_edit', {'id': player.id}) }}" class="btn btn-primary">Edit</a>
				{{ include('player/_delete_form.html.twig') }}
				<a href="{{ path('player_index') }}" class="btn btn-secondary">Back to list</a>
			</div>
		</div>
	</div>
{% endblock %}
