{% extends 'base.html.twig' %}

{% block title %}Team index
{% endblock %}

{% block body %}
	<div class="container mt-5">
		<h1 class="mb-4">Team index</h1>

		<table class="table table-bordered table-striped">
			<thead class="table-dark">
				<tr>
					<th>Name</th>
					<th>Country</th>
					<th>Actions</th>
				</tr>
			</thead>
			<tbody>
				{% for team in teams %}
					<tr>
						<td>{{ team.name }}</td>
						<td>{{ team.country }}</td>
						<td class="d-flex justify-content-center">
							<a href="{{ path('team_show', {'id': team.id}) }}" class="btn btn-primary btn-sm me-2">Show</a>
							<a href="{{ path('team_edit', {'id': team.id}) }}" class="btn btn-info btn-sm">Edit</a>
						</td>
					</tr>
				{% else %}
					<tr>
						<td colspan="4" class="text-center">No records found</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>

		<a href="{{ path('team_new') }}" class="btn btn-success">Create new</a>
	</div>
{% endblock %}
