{% extends 'base.html.twig' %}

{% block title %}Team{% endblock %}

{% block body %}
    <h1>Team</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Name</th>
                <td>{{ team.name }}</td>
            </tr>
            <tr>
                <th>Country</th>
                <td>{{ team.country }}</td>
            </tr>
        </tbody>
    </table>
     {% if team.imageName %}
        <img src="{{ asset('images/' ~ team.imageName) }}" alt="{{ team.name }}" class="logo">
    {% else %}
        <p>Aucune image disponible.</p>
    {% endif %}

    <a href="{{ path('team_index') }}">back to list</a>

    <a href="{{ path('team_edit', {'id': team.id}) }}">edit</a>

    {{ include('team/_delete_form.html.twig') }}
{% endblock %}
