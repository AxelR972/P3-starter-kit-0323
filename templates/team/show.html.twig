{% extends 'base.html.twig' %}

{% block title %}Team
{% endblock %}

{% block body %}
	<div class="d-flex justify-content-center align-items-center vh-100">
		<div class="card border-info mb-3">
			<div class="row g-0">
				<div class="col-md-4">
					<img src="{{ asset('images/' ~ team.imageName) }}" class="img-fluid rounded-start" alt="{{ team.name }}">
				</div>
				<div class="col-md-8">
					<div class="card-body">
						<h5 class="card-title"><strong>{{ team.name }}</strong></h5>
						<p class="card-text">
							<strong>Country:</strong>
							{{ team.country }}<br>
							<strong>Player:</strong>
                             {% for player in team.players %}
							{{ player.firstname }} / {{ player.lastname }}<br>
                            {% endfor %}
						</p>
					</div>
				</div>
			</div>
			<div class="card-footer d-flex justify-content-between">
				<a href="{{ path('team_edit', {'id': team.id}) }}" class="btn btn-primary">Edit</a>
				{{ include('team/_delete_form.html.twig') }}
				<a href="{{ path('team_index') }}" class="btn btn-secondary">Back to list</a>
			</div>
		</div>
	</div>
{% endblock %}
